# Nomada Tattoo Artist - Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Database Configuration
DATABASE_URL=ecto://postgres:postgres@localhost/nomada_dev
DATABASE_TEST_URL=ecto://postgres:postgres@localhost/nomada_test

# Phoenix Configuration
SECRET_KEY_BASE=generate_with_mix_phx_gen_secret
PHX_HOST=localhost
PHX_PORT=4000

# AWS S3 Configuration (for image storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=eu-north-1
S3_BUCKET_NAME=nomada-tattoo-portfolio

# AWS CloudFront Configuration (CDN for image delivery)
CLOUDFRONT_DOMAIN=your-cloudfront-id.cloudfront.net
# Example: d1234567890abc.cloudfront.net

# Email Configuration (Swoosh)
# For development, emails are stored locally at /dev/mailbox
# For production, use a service like SendGrid, Mailgun, etc.
SMTP_RELAY=smtp.sendgrid.net
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_PORT=587
MAIL_FROM_EMAIL=noreply@nomada.art
MAIL_FROM_NAME=Nomada Tattoo Artist
CONTACT_EMAIL=hello@nomada.art

# Production Configuration (only needed in production)
# PHX_SERVER=true
# POOL_SIZE=10
